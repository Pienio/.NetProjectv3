@model SystemRezerwacjiWizyt.Models.ChangePassword

@{
    ViewBag.Title = "ChangePassword";
}

<h2>Zmiana hasła</h2>

@using (Html.BeginForm()) 
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
      
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group">
            <label class="control-label col-md-2">Stare hasło*</label>
            <div class="col-md-10">
                @Html.EditorFor(model => model.password, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.password, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <label class="control-label col-md-2">Nowe hasło*</label>
            <div class="col-md-10">
                @Html.EditorFor(model => model.newpass, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.newpass, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <label class="control-label col-md-2">Powtórz nowe hasło*</label>
            <div class="col-md-10">
                @Html.EditorFor(model => model.newpass1, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.newpass1, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Zapisz" class="btn btn-default" />
            </div>
        </div>
    </div>
}
