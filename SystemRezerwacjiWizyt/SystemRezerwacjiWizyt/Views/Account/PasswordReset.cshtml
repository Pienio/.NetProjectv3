@model SystemRezerwacjiWizyt.Models.PasswordResetViewModel
@{
    ViewBag.Title = "PasswordReset";
}

<h2>PasswordReset</h2>
<p class = "text-danger">@ViewBag.Message</p>
@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    <div class="form-group">
        <p>Wprowadź mail, któy podałeś przy rejestracji</p>  
        <div class="col-md-10">
            @Html.TextBoxFor(model=>model.maill)
            @Html.ValidationMessageFor(model => model.maill, "", new { @class = "text-danger" })
        </div>
    </div>
    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" value="Save"  class="btn btn-default" />
        </div>
    </div>
}