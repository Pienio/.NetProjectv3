@model SystemRezerwacjiWizyt.Models.TokenConfirmationViewModel

@{
    ViewBag.Title = "Token";
}

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <hr />
        <h5>Na podany adres e-mail został wysłany token autoryzujący.</h5>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.Token, new { htmlAttributes = new { @class = "form-control" } })

        <div class="form-group">
        <label class="control-label col-md-2">Token</label>
            <div class="col-md-10">
                @Html.EditorFor(model => model.ToWrite, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.ToWrite, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Wyślij" class="btn btn-primary" />
            </div>
        </div>
    </div>
}


