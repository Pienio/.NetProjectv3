@model SystemRezerwacjiWizyt.Models.TokenConfirmationViewModel

@{
    ViewBag.Title = "RegisterPatientToken";
}

<h2>RegisterPatientToken</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        <h4>Wpisz token otrzymany w mejlu</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group">
         
                @Html.HiddenFor(model => model.Token, new { htmlAttributes = new { @class = "form-control" } })

        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.ToWrite, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.ToWrite, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.ToWrite, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Ok" class="btn btn-default" />
            </div>
        </div>
    </div>
}


