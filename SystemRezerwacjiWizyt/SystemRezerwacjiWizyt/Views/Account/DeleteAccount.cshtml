@model SystemRezerwacjiWizyt.Models.AccountDelete

@{
    ViewBag.Title = "Usuwanie konta";
}

<h3>Czy na pewno chcesz usunąć konto?</h3>

@using (Html.BeginForm()) 
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group">
            <label class="control-label col-md-2">Wprowadź hasło</label>
            <div class="col-md-10">
                @Html.EditorFor(model => model.password, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.password, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Usuń konto" class="btn btn-primary" />
            </div>
        </div>
    </div>
}


